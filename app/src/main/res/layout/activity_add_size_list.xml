<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddSizeListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_primary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whiteGray"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_15sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_15sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/gray_border">

                                <com.madhavsteel.views.MyEditText
                                    android:id="@+id/etSize"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/transparent"
                                    android:hint="Size"
                                    android:imeOptions="actionDone"
                                    android:inputType="text"
                                    android:padding="@dimen/_3sdp"
                                    android:textColor="@color/blackGray" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:background="@drawable/gray_border">

                                <androidx.appcompat.widget.AppCompatSpinner
                                    android:id="@+id/spnMeasurement"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="@dimen/_3sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:background="@drawable/gray_border">

                                <com.madhavsteel.views.MyEditText
                                    android:id="@+id/etPieceQuantity"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/transparent"
                                    android:gravity="center"
                                    android:hint="Quantity"
                                    android:imeOptions="actionNext"
                                    android:inputType="number"
                                    android:padding="@dimen/_3sdp"
                                    android:textColor="@color/blackGray" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <com.madhavsteel.views.MyEditText
                                android:id="@+id/etQuantity"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/gray_border"
                                android:hint="Measurement"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/blackGray" />

                            <com.madhavsteel.views.MyEditText
                                android:id="@+id/etPrice"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/gray_border"
                                android:hint="Price"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:imeOptions="actionDone"
                                android:inputType="numberDecimal"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/blackGray" />

                            <com.madhavsteel.views.MyTextViewBold
                                android:id="@+id/tvAddSize"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:background="@color/colorPrimary"
                                android:padding="@dimen/_5sdp"
                                android:text="Add Size"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_13sdp"
                                android:visibility="visible" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/llCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <com.madhavsteel.views.MyTextViewBold
                        android:id="@+id/tvAddMoreItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:padding="@dimen/_10sdp"
                        android:text="Add More Item"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp"
                        android:visibility="gone" />

                    <com.madhavsteel.views.MyTextViewBold
                        android:id="@+id/tvCalculatePrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:padding="@dimen/_10sdp"
                        android:text="Calculate Price"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
